# Production Environment Configuration
NODE_ENV=production
REACT_APP_ENVIRONMENT=production

# API Configuration
REACT_APP_API_URL=https://api-template-selector.example.com
REACT_APP_API_TIMEOUT=15000

# Features Flags
REACT_APP_ENABLE_ANALYTICS=true
REACT_APP_ENABLE_DEBUG_MODE=false
REACT_APP_ENABLE_PERFORMANCE_MONITORING=true

# Database Configuration
REACT_APP_DATABASE_URL=mongodb://prod-db.example.com:27017/template-selector-prod

# Authentication
REACT_APP_AUTH_ENABLED=true
REACT_APP_AUTH_PROVIDER=production-auth

# Logging
REACT_APP_LOG_LEVEL=error
REACT_APP_LOG_TO_CONSOLE=false

# Performance
REACT_APP_CACHE_DURATION=1800000
REACT_APP_DEBOUNCE_DELAY=300

# Testing
REACT_APP_TEST_MODE=false
REACT_APP_MOCK_DATA=false

# Monitoring
REACT_APP_SENTRY_DSN=https://production-sentry-dsn.example.com
REACT_APP_MONITORING_ENABLED=true

# Security
REACT_APP_SECURITY_HEADERS=true
REACT_APP_CSP_ENABLED=true
