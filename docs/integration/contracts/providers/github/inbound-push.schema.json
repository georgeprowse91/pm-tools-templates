{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "GitHub Push (Inbound)",
  "type": "object",
  "properties": {
    "provider": { "const": "github" },
    "event": { "const": "push" },
    "version": { "type": "string" },
    "data": {
      "type": "object",
      "properties": {
        "repository": {
          "type": "object",
          "properties": {
            "full_name": { "type": "string" }
          },
          "required": ["full_name"]
        },
        "ref": { "type": "string" }
      },
      "required": ["repository"]
    }
  },
  "required": ["provider", "event", "version", "data"]
}

