# PM Tools Templates - Ecosystem Configuration
# Copy this file to .env and configure your environment

# ================================
# AI Service Configuration
# ================================

# AI Service Port (default: 3001)
AI_SERVICE_PORT=3001

# AI Service URL for internal communication
AI_SERVICE_URL=http://localhost:3001

# OpenAI API Key for enhanced AI capabilities (optional)
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=

# OpenAI Model Selection (gpt-4, gpt-3.5-turbo, etc.)
OPENAI_MODEL=gpt-4

# ================================
# Dashboard Configuration
# ================================

# Dashboard Server Port (default: 3000)
DASHBOARD_PORT=3000

# Dashboard URL for internal communication
DASHBOARD_URL=http://localhost:3000

# Dashboard Update Frequency (in minutes)
DASHBOARD_UPDATE_INTERVAL=5

# WebSocket Connection Settings
WS_HEARTBEAT_INTERVAL=30000
WS_RECONNECT_ATTEMPTS=5

# ================================
# Health Monitor Configuration
# ================================

# Health Monitor Port (default: 3002)
HEALTH_MONITOR_PORT=3002

# Health Check Interval (cron format - default: every 2 minutes)
HEALTH_CHECK_INTERVAL="*/2 * * * *"

# Alert Thresholds
ALERT_CPU_THRESHOLD=0.80
ALERT_MEMORY_THRESHOLD=0.90
ALERT_DISK_THRESHOLD=0.85
ALERT_RESPONSE_TIME_THRESHOLD=5000

# ================================
# Analytics Configuration
# ================================

# Analytics Engine Port (default: 3003)
ANALYTICS_PORT=3003

# Analytics Data Retention (in days)
ANALYTICS_RETENTION_DAYS=90

# Analytics Export Format (json, csv, both)
ANALYTICS_EXPORT_FORMAT=json

# ================================
# Database Configuration (Future)
# ================================

# Database URL for persistent storage
# DATABASE_URL=postgresql://username:password@localhost:5432/pm_tools_db

# Redis URL for caching and sessions
# REDIS_URL=redis://localhost:6379

# ================================
# Security Configuration
# ================================

# JWT Secret for authentication (generate a secure random string)
JWT_SECRET=your-super-secure-jwt-secret-here

# Session Secret (generate a secure random string)
SESSION_SECRET=your-super-secure-session-secret-here

# API Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Settings
CORS_ORIGIN=http://localhost:3000,http://localhost:3001,http://localhost:3002

# ================================
# Integration Configuration
# ================================

# External Service URLs
JIRA_BASE_URL=
JIRA_API_TOKEN=

SLACK_BOT_TOKEN=
SLACK_SIGNING_SECRET=

GITHUB_TOKEN=
GITHUB_WEBHOOK_SECRET=

MICROSOFT_GRAPH_CLIENT_ID=
MICROSOFT_GRAPH_CLIENT_SECRET=

# ================================
# File Storage Configuration
# ================================

# Local storage paths
TEMPLATES_PATH=../../../
ANALYTICS_PATH=../analytics
HEALTH_DATA_PATH=../health-data
DASHBOARD_DATA_PATH=../dashboard-data
LOGS_PATH=../logs

# Cloud storage (optional)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=

AZURE_STORAGE_CONNECTION_STRING=
AZURE_CONTAINER_NAME=

# ================================
# Email Configuration
# ================================

# SMTP Settings for notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=

# Email Templates
FROM_EMAIL=noreply@pmtools.example.com
FROM_NAME=PM Tools Templates

# ================================
# Logging Configuration
# ================================

# Log Level (error, warn, info, debug)
LOG_LEVEL=info

# Log Format (json, simple)
LOG_FORMAT=json

# Log File Rotation
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# ================================
# Development Configuration
# ================================

# Node Environment
NODE_ENV=development

# Enable Development Features
DEBUG_MODE=true
VERBOSE_LOGGING=true

# Hot Reload Settings
WATCH_FILES=true
AUTO_RESTART=true

# ================================
# Production Configuration
# ================================

# Production overrides (uncomment for production)
# NODE_ENV=production
# DEBUG_MODE=false
# VERBOSE_LOGGING=false
# LOG_LEVEL=warn

# Performance Settings
# CLUSTER_MODE=true
# CLUSTER_WORKERS=auto

# Health Check URLs for Load Balancer
HEALTH_CHECK_PATH=/health
READINESS_CHECK_PATH=/ready
LIVENESS_CHECK_PATH=/alive

# ================================
# Monitoring & Observability
# ================================

# Application Performance Monitoring
# APM_SERVICE_NAME=pm-tools-ecosystem
# APM_SERVER_URL=

# Metrics Collection
METRICS_ENABLED=true
METRICS_PORT=9090

# Tracing
TRACING_ENABLED=false
JAEGER_ENDPOINT=

# ================================
# Enterprise Features
# ================================

# Multi-tenancy Support
MULTI_TENANT=false
DEFAULT_TENANT=default

# Audit Logging
AUDIT_ENABLED=true
AUDIT_RETENTION_DAYS=365

# Compliance Settings
GDPR_COMPLIANCE=true
HIPAA_COMPLIANCE=false
SOC2_COMPLIANCE=false
