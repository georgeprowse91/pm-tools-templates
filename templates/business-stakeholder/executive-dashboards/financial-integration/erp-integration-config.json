{
  "integrations": {
    "sap": {
      "enabled": true,
      "host": "https://your-sap-server.com",
      "client": "100",
      "apiEndpoint": "/sap/opu/odata/sap/ZBUDGET_VARIANCE_SRV",
      "authentication": {
        "type": "oauth2",
        "tokenEndpoint": "/sap/bc/sec/oauth2/token",
        "clientId": "${SAP_CLIENT_ID}",
        "clientSecret": "${SAP_CLIENT_SECRET}",
        "scope": "budget_read forecast_read"
      },
      "refreshInterval": 300000,
      "retryAttempts": 3,
      "timeout": 30000,
      "dataMapping": {
        "projectBudget": "ProjectBudgetSet",
        "actualCosts": "ActualCostSet",
        "commitments": "CommitmentSet",
        "forecasts": "ForecastSet"
      },
      "fields": {
        "projectCode": "ProjectCode",
        "approvedBudget": "ApprovedBudget",
        "actualSpend": "ActualCost",
        "committedCosts": "CommittedCosts",
        "availableBudget": "AvailableBudget",
        "budgetVariance": "BudgetVariance",
        "lastUpdated": "LastChanged"
      }
    },
    "oracle": {
      "enabled": true,
      "host": "your-oracle-server.com",
      "port": 1521,
      "serviceName": "ORCL",
      "authentication": {
        "type": "database",
        "username": "${ORACLE_USERNAME}",
        "password": "${ORACLE_PASSWORD}"
      },
      "refreshInterval": 300000,
      "retryAttempts": 3,
      "timeout": 30000,
      "queries": {
        "projectBudget": "SELECT p.PROJECT_ID, p.PROJECT_NUMBER, b.APPROVED_BUDGET_AMOUNT FROM PA_PROJECTS_ALL p JOIN PA_BUDGET_VERSIONS b ON p.PROJECT_ID = b.PROJECT_ID WHERE p.PROJECT_ID = :projectId",
        "actualCosts": "SELECT PROJECT_ID, SUM(ACTUAL_COST_AMOUNT) as ACTUAL_COST FROM PA_ACTUAL_COSTS WHERE PROJECT_ID = :projectId GROUP BY PROJECT_ID",
        "commitments": "SELECT PROJECT_ID, SUM(COMMITTED_COST_AMOUNT) as COMMITTED_COST FROM PA_COMMITMENTS WHERE PROJECT_ID = :projectId GROUP BY PROJECT_ID",
        "forecasts": "SELECT PROJECT_ID, FORECAST_AMOUNT FROM PA_FORECASTS WHERE PROJECT_ID = :projectId"
      }
    },
    "workday": {
      "enabled": false,
      "host": "https://your-tenant.workday.com",
      "tenant": "your_tenant",
      "authentication": {
        "type": "oauth2",
        "tokenEndpoint": "/ccx/oauth2/token",
        "clientId": "${WORKDAY_CLIENT_ID}",
        "clientSecret": "${WORKDAY_CLIENT_SECRET}",
        "scope": "financials"
      },
      "apiVersion": "v1",
      "refreshInterval": 300000,
      "endpoints": {
        "budgets": "/ccx/api/financialManagement/v1/budgets",
        "actuals": "/ccx/api/financialManagement/v1/actuals",
        "forecasts": "/ccx/api/financialManagement/v1/forecasts"
      }
    },
    "netsuite": {
      "enabled": false,
      "accountId": "your_account_id",
      "host": "https://your-account-id.suitetalk.api.netsuite.com",
      "authentication": {
        "type": "token",
        "consumerKey": "${NETSUITE_CONSUMER_KEY}",
        "consumerSecret": "${NETSUITE_CONSUMER_SECRET}",
        "tokenId": "${NETSUITE_TOKEN_ID}",
        "tokenSecret": "${NETSUITE_TOKEN_SECRET}"
      },
      "apiVersion": "2023_1",
      "refreshInterval": 300000,
      "records": {
        "budgets": "budget",
        "transactions": "transaction",
        "projects": "job"
      }
    },
    "dynamics365": {
      "enabled": false,
      "host": "https://your-org.crm.dynamics.com",
      "authentication": {
        "type": "oauth2",
        "authority": "https://login.microsoftonline.com/your-tenant-id",
        "clientId": "${DYNAMICS_CLIENT_ID}",
        "clientSecret": "${DYNAMICS_CLIENT_SECRET}",
        "resource": "https://your-org.crm.dynamics.com"
      },
      "apiVersion": "9.2",
      "refreshInterval": 300000,
      "entities": {
        "projects": "msdyn_projects",
        "budgets": "msdyn_projectbudgets",
        "actuals": "msdyn_actuals"
      }
    }
  },
  "dataWarehouse": {
    "enabled": true,
    "type": "snowflake",
    "connection": {
      "account": "your-account.snowflakecomputing.com",
      "warehouse": "BUDGET_WH",
      "database": "FINANCIAL_DATA",
      "schema": "BUDGET_VARIANCE",
      "authentication": {
        "type": "keypair",
        "username": "${SNOWFLAKE_USERNAME}",
        "privateKey": "${SNOWFLAKE_PRIVATE_KEY}",
        "passphrase": "${SNOWFLAKE_PASSPHRASE}"
      }
    },
    "tables": {
      "budgets": "BUDGET_MASTER",
      "actuals": "ACTUAL_SPEND",
      "forecasts": "BUDGET_FORECASTS",
      "categories": "BUDGET_CATEGORIES",
      "projects": "PROJECT_MASTER"
    },
    "refreshInterval": 300000
  },
  "alerting": {
    "email": {
      "enabled": true,
      "provider": "smtp",
      "host": "smtp.company.com",
      "port": 587,
      "secure": true,
      "authentication": {
        "username": "${EMAIL_USERNAME}",
        "password": "${EMAIL_PASSWORD}"
      },
      "from": "budget-alerts@company.com",
      "templates": {
        "budgetVariance": "budget-variance-alert.html",
        "burnRateExceeded": "burn-rate-alert.html",
        "forecastOverrun": "forecast-overrun-alert.html"
      }
    },
    "slack": {
      "enabled": true,
      "webhookUrl": "${SLACK_WEBHOOK_URL}",
      "channel": "#budget-alerts",
      "username": "Budget Bot",
      "iconEmoji": ":money_with_wings:"
    },
    "teams": {
      "enabled": true,
      "webhookUrl": "${TEAMS_WEBHOOK_URL}",
      "cardTemplate": "adaptive-card-template.json"
    },
    "sms": {
      "enabled": true,
      "provider": "twilio",
      "accountSid": "${TWILIO_ACCOUNT_SID}",
      "authToken": "${TWILIO_AUTH_TOKEN}",
      "fromNumber": "+1234567890"
    },
    "pagerduty": {
      "enabled": false,
      "apiKey": "${PAGERDUTY_API_KEY}",
      "serviceKey": "${PAGERDUTY_SERVICE_KEY}",
      "escalationPolicy": "Budget Escalation Policy"
    }
  },
  "dashboard": {
    "refreshInterval": 300000,
    "cacheExpiry": 600000,
    "maxDataPoints": 100,
    "chartAnimations": true,
    "realTimeUpdates": true,
    "mobileOptimized": true,
    "themes": {
      "default": "executive",
      "available": ["executive", "modern", "minimal", "dark"]
    }
  },
  "security": {
    "authentication": {
      "type": "oauth2",
      "provider": "azure-ad",
      "tenantId": "${AZURE_TENANT_ID}",
      "clientId": "${AZURE_CLIENT_ID}",
      "requiredRoles": ["CFO", "Finance Manager", "Executive", "Project Manager"]
    },
    "encryption": {
      "dataAtRest": true,
      "dataInTransit": true,
      "encryptionKey": "${ENCRYPTION_KEY}"
    },
    "audit": {
      "enabled": true,
      "logAllAccess": true,
      "retentionDays": 365,
      "alertOnSuspiciousActivity": true
    }
  },
  "performance": {
    "caching": {
      "enabled": true,
      "provider": "redis",
      "host": "localhost",
      "port": 6379,
      "ttl": 300
    },
    "rateLimit": {
      "enabled": true,
      "requestsPerMinute": 100,
      "burstLimit": 200
    },
    "monitoring": {
      "enabled": true,
      "healthCheckInterval": 60000,
      "alertOnFailure": true,
      "metricsEndpoint": "/api/v1/metrics"
    }
  },
  "compliance": {
    "sox": {
      "enabled": true,
      "auditTrail": true,
      "dataRetention": 2555 // 7 years in days
    },
    "gdpr": {
      "enabled": true,
      "dataMinimization": true,
      "rightToErasure": true
    },
    "iso27001": {
      "enabled": true,
      "riskAssessment": true,
      "incidentResponse": true
    }
  },
  "businessRules": {
    "varianceThresholds": {
      "excellent": 2,
      "good": 5,
      "caution": 10,
      "warning": 15,
      "critical": 20
    },
    "alertThresholds": {
      "warning": 5,
      "critical": 10,
      "emergency": 15
    },
    "burnRateThresholds": {
      "normal": 1.0,
      "caution": 1.1,
      "warning": 1.2,
      "critical": 1.3
    },
    "forecastAccuracy": {
      "target": 95,
      "acceptable": 90,
      "poor": 80
    },
    "escalationRules": {
      "warning": ["PM", "Finance Manager"],
      "critical": ["CFO", "Executive Sponsor"],
      "emergency": ["CEO", "Board of Directors"]
    }
  },
  "dataQuality": {
    "validation": {
      "enabled": true,
      "rules": [
        {
          "field": "approvedBudget",
          "type": "range",
          "min": 0,
          "max": 100000000
        },
        {
          "field": "actualSpend",
          "type": "range",
          "min": 0,
          "max": 100000000
        },
        {
          "field": "budgetVariancePercent",
          "type": "range",
          "min": -100,
          "max": 100
        }
      ]
    },
    "cleansing": {
      "enabled": true,
      "trimWhitespace": true,
      "handleNulls": true,
      "standardizeFormats": true
    },
    "monitoring": {
      "enabled": true,
      "qualityScore": true,
      "alertOnPoorQuality": true,
      "qualityThreshold": 95
    }
  },
  "backupAndRecovery": {
    "enabled": true,
    "backupInterval": 86400000,
    "retentionDays": 30,
    "backupLocation": "s3://your-backup-bucket/budget-data",
    "encryption": true,
    "testRecovery": {
      "enabled": true,
      "frequency": "monthly"
    }
  },
  "logging": {
    "level": "info",
    "format": "json",
    "outputs": [
      {
        "type": "file",
        "path": "/var/log/budget-variance/app.log",
        "maxSize": "100MB",
        "maxFiles": 10
      },
      {
        "type": "elasticsearch",
        "host": "elasticsearch.company.com",
        "index": "budget-variance-logs"
      }
    ],
    "sensitiveFields": [
      "password",
      "token",
      "secret",
      "key"
    ]
  }
}
