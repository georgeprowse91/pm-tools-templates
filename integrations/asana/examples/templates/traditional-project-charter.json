  "tasks": [
    {
      "id": "charter-001",
      "name": "Define Project Purpose and Justification",
      "description": "Document the business need, opportunity, or requirement that the project will address",
      "estimatedHours": 8,
      "dependencies": [],
      "assigneeRole": "Project Manager",
      "priority": "High",
      "tags": ["charter", "business-case", "initiation"],
      "customFields": {
        "project_phase": "Initiation",
        "deliverable": "Project Purpose Statement"
      },
      "subtasks": [
        {
          "id": "charter-001-1",
          "name": "Research business drivers",
          "description": "Identify and document the business drivers behind the project",
          "estimatedHours": 3,
          "assigneeRole": "Business Analyst",
          "priority": "High"
        },
        {
          "id": "charter-001-2", 
          "name": "Document project justification",
          "description": "Write clear justification for why this project should be undertaken",
          "estimatedHours": 3,
          "assigneeRole": "Project Manager",
          "priority": "High"
        },
        {
          "id": "charter-001-3",
          "name": "Align with strategic objectives",
          "description": "Ensure project aligns with organizational strategic goals",
          "estimatedHours": 2,
          "assigneeRole": "Project Sponsor",
          "priority": "Medium"
        }
      ]
    },
    {
      "id": "charter-002",
      "name": "Identify Project Objectives and Success Criteria",
      "description": "Define measurable project objectives and success criteria",
      "estimatedHours": 12,
      "dependencies": ["charter-001"],
      "assigneeRole": "Project Manager",
      "priority": "High",
      "tags": ["charter", "objectives", "success-criteria"],
      "customFields": {
        "project_phase": "Initiation",
        "deliverable": "Project Objectives Document"
      },
      "subtasks": [
        {
          "id": "charter-002-1",
          "name": "Define SMART objectives",
          "description": "Create Specific, Measurable, Achievable, Relevant, Time-bound objectives",
          "estimatedHours": 4,
          "assigneeRole": "Project Manager",
          "priority": "High"
        },
        {
          "id": "charter-002-2",
          "name": "Establish success criteria",
          "description": "Define clear criteria for project success and acceptance",
          "estimatedHours": 4,
          "assigneeRole": "Project Manager",
          "priority": "High"
        },
        {
          "id": "charter-002-3",
          "name": "Define key performance indicators",
          "description": "Identify KPIs to measure project progress and success",
          "estimatedHours": 4,
          "assigneeRole": "Business Analyst",
          "priority": "Medium"
        }
      ]
    },
    {
      "id": "charter-003",
      "name": "Document High-Level Requirements",
      "description": "Capture high-level project requirements and constraints",
      "estimatedHours": 16,
      "dependencies": ["charter-002"],
      "assigneeRole": "Business Analyst",
      "priority": "High",
      "tags": ["charter", "requirements", "constraints"],
      "customFields": {
        "project_phase": "Initiation",
        "deliverable": "High-Level Requirements Document"
      },
      "subtasks": [
        {
          "id": "charter-003-1",
          "name": "Gather stakeholder requirements",
          "description": "Collect requirements from key stakeholders",
          "estimatedHours": 6,
          "assigneeRole": "Business Analyst",
          "priority": "High"
        },
        {
          "id": "charter-003-2",
          "name": "Document functional requirements",
          "description": "Capture high-level functional requirements",
          "estimatedHours": 4,
          "assigneeRole": "Business Analyst",
          "priority": "High"
        },
        {
          "id": "charter-003-3",
          "name": "Identify constraints and assumptions",
          "description": "Document project constraints, assumptions, and dependencies",
          "estimatedHours": 3,
          "assigneeRole": "Project Manager",
          "priority": "Medium"
        },
        {
          "id": "charter-003-4",
          "name": "Define acceptance criteria",
          "description": "Establish criteria for requirement acceptance",
          "estimatedHours": 3,
          "assigneeRole": "Business Analyst",
          "priority": "Medium"
        }
      ]
    },
    {
      "id": "charter-004",
      "name": "Identify Key Stakeholders",
      "description": "Identify and document all project stakeholders and their roles",
      "estimatedHours": 8,
      "dependencies": ["charter-001"],
      "assigneeRole": "Project Manager",
      "priority": "High",
      "tags": ["charter", "stakeholders", "roles"],
      "customFields": {
        "project_phase": "Initiation",
        "deliverable": "Stakeholder Register"
      },
      "subtasks": [
        {
          "id": "charter-004-1",
          "name": "Map stakeholder landscape",
          "description": "Identify all internal and external stakeholders",
          "estimatedHours": 3,
          "assigneeRole": "Project Manager",
          "priority": "High"
        },
        {
          "id": "charter-004-2",
          "name": "Define stakeholder roles",
          "description": "Document roles and responsibilities for each stakeholder",
          "estimatedHours": 3,
          "assigneeRole": "Project Manager",
          "priority": "High"
        },
        {
          "id": "charter-004-3",
          "name": "Assess stakeholder influence",
          "description": "Analyze stakeholder power, interest, and influence",
          "estimatedHours": 2,
          "assigneeRole": "Project Manager",
          "priority": "Medium"
        }
      ]
    },
    {
      "id": "charter-005",
      "name": "Define Project Scope Boundaries",
      "description": "Establish what is included and excluded from the project scope",
      "estimatedHours": 10,
      "dependencies": ["charter-003"],
      "assigneeRole": "Project Manager",
      "priority": "High",
      "tags": ["charter", "scope", "boundaries"],
      "customFields": {
        "project_phase": "Initiation",
        "deliverable": "Scope Statement"
      },
      "subtasks": [
        {
          "id": "charter-005-1",
          "name": "Define project scope",
          "description": "Clearly define what the project will deliver",
          "estimatedHours": 4,
          "assigneeRole": "Project Manager",
          "priority": "High"
        },
        {
          "id": "charter-005-2",
          "name": "Document exclusions",
          "description": "Explicitly state what is out of scope",
          "estimatedHours": 3,
          "assigneeRole": "Project Manager",
          "priority": "High"
        },
        {
          "id": "charter-005-3",
          "name": "Validate scope boundaries",
          "description": "Review scope with stakeholders for agreement",
          "estimatedHours": 3,
          "assigneeRole": "Project Sponsor",
          "priority": "Medium"
        }
      ]
    },
    {
