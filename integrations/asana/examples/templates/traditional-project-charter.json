{
  "id": "pmbok-project-charter-v1.0",
  "name": "Traditional Project Charter",
  "methodology": "Traditional",
  "version": "1.0.0",
  "fields": [
    {
      "name": "project_name",
      "type": "text",
      "required": true,
      "defaultValue": "",
      "validation": {
        "min": 3,
        "max": 100,
        "required": true
      }
    },
    {
      "name": "project_manager",
      "type": "user",
      "required": true,
      "defaultValue": null
    },
    {
      "name": "sponsor",
      "type": "user", 
      "required": true,
      "defaultValue": null
    },
    {
      "name": "start_date",
      "type": "date",
      "required": true,
      "defaultValue": null
    },
    {
      "name": "target_end_date",
      "type": "date",
      "required": true,
      "defaultValue": null
    },
    {
      "name": "budget",
      "type": "number",
      "required": false,
      "defaultValue": 0,
      "validation": {
        "min": 0
      }
    },
