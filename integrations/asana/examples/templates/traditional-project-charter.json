      "assigneeRole": "Project Manager",
      "priority": "High",
      "tags": ["charter", "timeline", "milestones"],
      "customFields": {
        "project_phase": "Initiation",
        "deliverable": "High-Level Schedule"
      },
      "subtasks": [
        {
          "id": "charter-006-1",
          "name": "Define project phases",
          "description": "Break project into logical phases",
          "estimatedHours": 3,
          "assigneeRole": "Project Manager",
          "priority": "High"
        },
        {
          "id": "charter-006-2",
          "name": "Identify key milestones",
          "description": "Define major project milestones and deliverables",
          "estimatedHours": 4,
          "assigneeRole": "Project Manager",
          "priority": "High"
        },
        {
          "id": "charter-006-3",
          "name": "Estimate timeline",
          "description": "Provide high-level duration estimates for each phase",
          "estimatedHours": 3,
          "assigneeRole": "Project Manager",
          "priority": "Medium"
        },
        {
          "id": "charter-006-4",
          "name": "Validate timeline feasibility",
          "description": "Review timeline with stakeholders and subject matter experts",
          "estimatedHours": 2,
          "assigneeRole": "Project Manager",
          "priority": "Medium"
        }
      ]
    },
    {
      "id": "charter-007",
      "name": "Define Budget and Resource Requirements",
      "description": "Establish project budget and resource needs",
      "estimatedHours": 10,
      "dependencies": ["charter-006"],
      "assigneeRole": "Project Manager",
      "priority": "High",
      "tags": ["charter", "budget", "resources"],
      "customFields": {
        "project_phase": "Initiation",
        "deliverable": "Budget Estimate"
      },
      "subtasks": [
        {
          "id": "charter-007-1",
          "name": "Estimate project costs",
          "description": "Develop high-level cost estimates for the project",
          "estimatedHours": 4,
          "assigneeRole": "Project Manager",
          "priority": "High"
        },
        {
          "id": "charter-007-2",
          "name": "Identify resource requirements",
          "description": "Define human and material resource needs",
          "estimatedHours": 3,
          "assigneeRole": "Project Manager",
          "priority": "High"
        },
        {
          "id": "charter-007-3",
          "name": "Validate budget assumptions",
          "description": "Review budget estimates with finance and stakeholders",
          "estimatedHours": 3,
          "assigneeRole": "Project Sponsor",
          "priority": "Medium"
        }
      ]
    },
    {
      "id": "charter-008",
      "name": "Conduct Risk Assessment",
      "description": "Identify and assess high-level project risks",
      "estimatedHours": 8,
      "dependencies": ["charter-004"],
      "assigneeRole": "Project Manager",
      "priority": "Medium",
      "tags": ["charter", "risk", "assessment"],
      "customFields": {
        "project_phase": "Initiation",
        "deliverable": "Risk Register"
      },
      "subtasks": [
        {
          "id": "charter-008-1",
          "name": "Identify potential risks",
          "description": "Brainstorm and document potential project risks",
          "estimatedHours": 3,
          "assigneeRole": "Project Manager",
          "priority": "Medium"
        },
        {
          "id": "charter-008-2",
          "name": "Assess risk probability and impact",
          "description": "Evaluate likelihood and potential impact of identified risks",
          "estimatedHours": 3,
          "assigneeRole": "Project Manager",
          "priority": "Medium"
        },
        {
          "id": "charter-008-3",
          "name": "Develop mitigation strategies",
          "description": "Create high-level strategies for managing key risks",
          "estimatedHours": 2,
          "assigneeRole": "Project Manager",
          "priority": "Low"
        }
      ]
    },
    {
      "id": "charter-009",
      "name": "Obtain Formal Authorization",
      "description": "Secure formal project authorization and sign-off",
      "estimatedHours": 6,
      "dependencies": ["charter-007", "charter-008"],
      "assigneeRole": "Project Sponsor",
      "priority": "Critical",
      "tags": ["charter", "authorization", "approval"],
      "customFields": {
        "project_phase": "Initiation",
        "deliverable": "Signed Project Charter"
      },
      "subtasks": [
        {
          "id": "charter-009-1",
          "name": "Prepare charter document",
          "description": "Compile all charter components into final document",
          "estimatedHours": 2,
          "assigneeRole": "Project Manager",
          "priority": "High"
        },
        {
          "id": "charter-009-2",
          "name": "Present to stakeholders",
          "description": "Present project charter to key stakeholders",
          "estimatedHours": 2,
          "assigneeRole": "Project Manager",
          "priority": "High"
        },
        {
          "id": "charter-009-3",
          "name": "Obtain formal approval",
          "description": "Secure signatures and formal authorization",
          "estimatedHours": 2,
          "assigneeRole": "Project Sponsor",
          "priority": "Critical"
        }
      ]
