      "type": "enum",
      "required": true,
      "defaultValue": "Initiation",
      "options": ["Initiation", "Planning", "Execution", "Monitoring & Controlling", "Closing"]
    },
    {
      "name": "priority",
      "type": "enum",
      "required": true,
      "defaultValue": "Medium",
      "options": ["Low", "Medium", "High", "Critical"]
    },
