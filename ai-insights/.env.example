# AI Insights Configuration
NODE_ENV=development

# API Configuration
PORT=3001
API_BASE_URL=http://localhost:3001
API_VERSION=v1

# Machine Learning Configuration
ML_MODEL_PATH=./data/models
TENSORFLOW_BACKEND=cpu
ML_CACHE_SIZE=100
PREDICTION_BATCH_SIZE=32

# Database Configuration (Future)
# DATABASE_URL=postgresql://user:password@localhost:5432/ai_insights
# REDIS_URL=redis://localhost:6379

# External Integrations
DASHBOARD_API_URL=http://localhost:3000/api
GITHUB_API_TOKEN=your_github_token_here
JIRA_API_URL=your_jira_instance
AZURE_DEVOPS_TOKEN=your_azure_token

# Model Training Configuration
TRAINING_DATA_SIZE=10000
VALIDATION_SPLIT=0.2
EPOCHS=100
BATCH_SIZE=32
LEARNING_RATE=0.001

# Risk Prediction Model
RISK_MODEL_THRESHOLD=0.7
RISK_UPDATE_INTERVAL=3600

# Resource Optimization
RESOURCE_OPTIMIZATION_INTERVAL=86400
CAPACITY_PLANNING_HORIZON=30

# Monitoring and Logging
LOG_LEVEL=info
METRICS_ENABLED=true
PERFORMANCE_MONITORING=true

# Security
JWT_SECRET=your_jwt_secret_here
API_RATE_LIMIT=100

# Feature Flags
ENABLE_RISK_PREDICTION=true
ENABLE_RESOURCE_OPTIMIZATION=true
ENABLE_SENTIMENT_ANALYSIS=true
ENABLE_PATTERN_RECOGNITION=true

