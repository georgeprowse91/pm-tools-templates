# AI-Powered Project Insights - Production Configuration

# Core Configuration
NODE_ENV=production
PORT=3001
LOG_LEVEL=info

# Security
AI_INSIGHTS_API_KEY=your-production-api-key-here
CORS_ORIGIN=https://your-dashboard-domain.com

# ML Configuration
ML_MODEL_PATH=/app/data/models
TENSORFLOW_BACKEND=cpu
PREDICTION_BATCH_SIZE=32

# Performance Tuning
ML_CACHE_SIZE=1000
RISK_UPDATE_INTERVAL=3600
RESOURCE_OPTIMIZATION_INTERVAL=86400

# Feature Flags
ENABLE_RISK_PREDICTION=true
ENABLE_RESOURCE_OPTIMIZATION=true
ENABLE_SENTIMENT_ANALYSIS=true
ENABLE_PATTERN_RECOGNITION=true

# Risk Model Configuration
RISK_MODEL_THRESHOLD=0.7
EPOCHS=100
LEARNING_RATE=0.001
VALIDATION_SPLIT=0.2

# Training Data Configuration
TRAINING_DATA_SIZE=10000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
INSIGHTS_RATE_LIMIT=20
BATCH_RATE_LIMIT=5

# Database (if using external storage)
# DATABASE_URL=postgresql://user:password@localhost:5432/ai_insights
# REDIS_URL=redis://localhost:6379

# Monitoring and Logging
LOG_FILE_PATH=/app/data/logs/ai-insights.log
METRICS_ENABLED=true
HEALTH_CHECK_INTERVAL=30000

# External Services
# EXTERNAL_API_ENDPOINT=https://api.external-service.com
# EXTERNAL_API_KEY=your-external-api-key

# Deployment Configuration
DOCKER_MEMORY_LIMIT=2g
DOCKER_CPU_LIMIT=1.0
CONTAINER_RESTART_POLICY=unless-stopped

# SSL/TLS (if using HTTPS)
# SSL_CERT_PATH=/app/certs/cert.pem
# SSL_KEY_PATH=/app/certs/key.pem

# Backup and Recovery
# BACKUP_INTERVAL=86400
# BACKUP_RETENTION_DAYS=30
# BACKUP_STORAGE_PATH=/app/data/backups

